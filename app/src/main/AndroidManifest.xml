<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nb.scode.digisign">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.VIBRATE"/>

  <!-- Tell the system this app requires OpenGL ES 3.0. -->
  <uses-feature
      android:glEsVersion="0x00030000"
      android:required="false"/>
  <uses-feature
      android:name="android.hardware.camera2"
      android:required="false"/>

  <application
      android:name=".App"
      android:allowBackup="true"
      android:icon="@drawable/logo_ic"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.example.android.fileprovider"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/photo_paths"/>
    </provider>

    <service android:name=".data.service.MyFirebaseMessagingService">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT"/>
      </intent-filter>
    </service>
    <service android:name=".data.service.MyFirebaseInstanceIDService">
      <intent-filter>
        <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
      </intent-filter>
    </service>

    <activity android:name=".view.impl.MainActivity">
    </activity>
    <activity
        android:name=".view.impl.ChoosePdfActivity"
        android:parentActivityName=".view.impl.MainActivity">
    </activity>
    <activity
        android:name=".view.impl.AddSignerActivity"
        android:parentActivityName=".view.impl.ChoosePdfActivity">
    </activity>
    <activity
        android:name=".view.impl.LoginActivity"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".view.impl.SignUpActivity"
        android:launchMode="singleTask">
    </activity>
    <activity android:name=".view.impl.ReceivedDocActivity">
      <intent-filter>
        <action android:name="OPEN_RECEIVED_DOC"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".view.impl.TakePhotoActivity"
        android:parentActivityName=".view.impl.MainActivity">
    </activity>
  </application>

</manifest>