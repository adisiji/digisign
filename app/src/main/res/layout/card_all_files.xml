<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="12dp"
    >

  <ImageView
      android:id="@+id/iv_filecard"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:src="@drawable/ic_file"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/tv_file_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:text="Nama File"
      app:layout_constraintLeft_toRightOf="@id/iv_filecard"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/tv_file_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:text="Date"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@id/iv_filecard"
      />

  <TextView
      android:id="@+id/tv_file_from"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:text="From : "
      app:layout_constraintBottom_toTopOf="@id/tv_file_date"
      app:layout_constraintLeft_toRightOf="@id/iv_filecard"
      app:layout_constraintTop_toBottomOf="@id/tv_file_name"
      />

  <TextView
      android:id="@+id/tv_file_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="File Size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />

  <View
      android:id="@+id/view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</android.support.constraint.ConstraintLayout>