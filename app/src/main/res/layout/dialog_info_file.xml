<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    >

  <android.support.constraint.ConstraintLayout
      android:id="@+id/root_select_difficulty"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_dialog"
      >

    <TextView
        android:id="@+id/title_difficult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="File Information"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guide_v05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guide_v45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guide_v55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guide_v95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />

    <TextView
        android:id="@+id/title_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Name : "
        app:layout_constraintLeft_toLeftOf="@id/guide_v05"
        app:layout_constraintTop_toBottomOf="@id/title_difficult"
        />

    <TextView
        android:id="@+id/content_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="content"
        app:layout_constraintBaseline_toBaselineOf="@id/title_file_name"
        app:layout_constraintLeft_toRightOf="@id/title_file_name"
        app:layout_constraintRight_toRightOf="@id/guide_v95"
        app:layout_constraintTop_toBottomOf="@id/title_difficult"
        />

    <TextView
        android:id="@+id/title_file_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="From : "
        app:layout_constraintLeft_toLeftOf="@id/guide_v05"
        app:layout_constraintTop_toBottomOf="@id/title_file_name"
        />

    <TextView
        android:id="@+id/content_file_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="content"
        app:layout_constraintBaseline_toBaselineOf="@id/title_file_from"
        app:layout_constraintLeft_toRightOf="@id/title_file_from"
        app:layout_constraintRight_toRightOf="@id/guide_v95"
        />

    <TextView
        android:id="@+id/title_file_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Description : "
        app:layout_constraintLeft_toLeftOf="@id/guide_v05"
        app:layout_constraintTop_toBottomOf="@id/title_file_from"
        />

    <TextView
        android:id="@+id/content_file_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="content"
        app:layout_constraintBaseline_toBaselineOf="@id/title_file_desc"
        app:layout_constraintLeft_toRightOf="@id/title_file_desc"
        app:layout_constraintRight_toRightOf="@id/guide_v95"
        />

    <TextView
        android:id="@+id/title_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Signature Time : "
        app:layout_constraintLeft_toLeftOf="@id/guide_v05"
        app:layout_constraintTop_toBottomOf="@id/content_file_desc"
        />

    <TextView
        android:id="@+id/content_sign_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Content"
        app:layout_constraintLeft_toRightOf="@id/title_sign_time"
        app:layout_constraintRight_toRightOf="@id/guide_v95"
        app:layout_constraintTop_toBottomOf="@id/content_file_desc"
        />

    <TextView
        android:id="@+id/title_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Size : "
        app:layout_constraintLeft_toLeftOf="@id/guide_v05"
        app:layout_constraintTop_toBottomOf="@id/content_sign_time"
        />

    <TextView
        android:id="@+id/content_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="content"
        app:layout_constraintLeft_toRightOf="@id/title_file_size"
        app:layout_constraintTop_toBottomOf="@id/content_sign_time"
        />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/content_file_size"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_ok_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:fb_focusColor="#FFBDBDBD"
        app:fb_ghost="true"
        app:fb_text="OK"
        app:fb_textColor="@color/grey_500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        />

  </android.support.constraint.ConstraintLayout>
</FrameLayout>